<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/accent_color"
    android:orientation="vertical"
    android:windowBackground="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_dialog"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tempo de descanso"
                android:textColor="@color/main_color"
                android:textSize="23sp"></TextView>

            <EditText
                android:id="@+id/newTimeText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bordered_accent_color"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="27sp"></EditText>

        </LinearLayout>

        <GridLayout
            android:id="@+id/buttonsTimingGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="10dp"
            android:rowCount="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="0.5"
                android:layout_margin="8dp"
                android:background="@drawable/yellow_bordered_button"
                android:text="00:30"
                android:textColor="@color/black" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="0.5"
                android:layout_margin="8dp"
                android:background="@drawable/yellow_bordered_button"
                android:text="00:45"
                android:textColor="@color/black" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="0.5"
                android:layout_margin="8dp"
                android:background="@drawable/yellow_bordered_button"
                android:text="01:00"
                android:textColor="@color/black" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="0.5"
                android:layout_margin="8dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/yellow_bordered_button"
                android:text="01:30"
                android:textColor="@color/black" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="0.5"
                android:layout_margin="8dp"
                android:background="@drawable/yellow_bordered_button"
                android:text="01:45"
                android:textColor="@color/black" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_columnWeight="0.5"
                android:layout_margin="8dp"
                android:background="@drawable/yellow_bordered_button"
                android:text="02:00"
                android:textColor="@color/black" />

        </GridLayout>

        <Button
            android:id="@+id/buttonConfirmar"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/yellow_bordered_button"
            android:text="SALVAR"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
